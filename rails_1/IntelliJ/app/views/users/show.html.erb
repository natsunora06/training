<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name || "default_user.jpg"}" %>" >
      <!-- 以下で、ユーザー名を出力してください -->
      <h2><%= @user.name %></h2>
      <!-- 以下で、メールアドレスを出力してください -->
      <p><%= @user.email %></p>

      <!-- ユーザー編集　-->
      <!--<p><= @user.gender %></p>-->
      <% if @user.id == @current_user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
        <% end %>
    </div>
  </div>
</div>